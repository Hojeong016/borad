<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
</head>
<body>
{{>layout/header}}

<!-- content -->
{{#memberUp}}
<form class="container" action="/members/update" method="post">
    <input name="id" type="hidden" value="{{id}}">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="{{email}}">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" name="password" value="{{password}}">
    </div>
    <button type="submit" class="btn btn-primary">수정하기</button>
</form>
{{/memberUp}}
<!-- content -->
{{>layout/footer}}
</body>
</html>